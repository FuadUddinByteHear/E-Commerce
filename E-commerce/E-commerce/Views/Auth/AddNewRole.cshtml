@model Aranoz.Model.Model.AdminViewModel

@{
    ViewBag.Title = "AddNewRole";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
    var i = 1;
}
<center>
    <h1> ADD New Role</h1>
    <div>
        @using (Html.BeginForm("AddNewRole", "Auth", FormMethod.Post))
        {
            @Html.HiddenFor(Model => Model.role.RoleId)
            <div class="col-lg-6">
                <label>Category Name</label>
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.role.RoleName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(Model => Model.role.RoleName)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-8 ml-auto">
                    <input type="submit" class="btn btn-primary" value="ADD ROLE" />
                </div>
            </div>
        }
    </div>
</center>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Data Table</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered zero-configuration">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Role Name</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.rolelist)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        @item.RoleName
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "DeleteRole", new { Id = item.RoleName }, new { title = "Delete Item", @class = "btn btn-danger", data_toggle = "tooltip", data_placement = "top", onclick = "return confirm('Are you sure you want to delete this item?')" })
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>No</th>
                                <th>Role Name</th>
                                <th>Delete</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>