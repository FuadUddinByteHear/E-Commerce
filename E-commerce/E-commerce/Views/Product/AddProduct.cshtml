@model Aranoz.Model.Model.AdminViewModel
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">
                        @using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.HiddenFor(model => model.Product.ProdutID)
                            @Html.HiddenFor(model => model.Product.ProductImage)
                            <h1 class="title-addproduct"> Give All The Information Carefully</h1>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">
                                    Product Name <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    @Html.EditorFor(model => model.Product.ProductName, new { @class = "form-control inputfield", @id = "val-username", @placeholder = "Product Name", type = "text" })
                                    @Html.ValidationMessageFor(model => model.Product.ProductName, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">
                                    Product Price <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    @Html.EditorFor(model => model.Product.ProductPrice, new { @class = "form-control inputfield", @id = "val-username", @placeholder = "Product price", type = "number" })
                                    @Html.ValidationMessageFor(model => model.Product.ProductPrice, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">
                                    Product Details <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    @Html.TextAreaFor(model => model.Product.ProductDetails, new { @class = "form-control", @id = "val-suggestions", @rows = "5", @placeholder = "Product Details", type = "text", })
                                    @Html.ValidationMessageFor(model => model.Product.ProductDetails, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">
                                    Category <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    @Html.DropDownListFor(model => model.Product.CategoryId, new SelectList(Model.CategoryList, "CategoryId", "CategorName"), new { @class = "form-control", @id = "val-skill" })
                                    @Html.ValidationMessageFor(model => model.Product.CategoryId)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">
                                    Total Product <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    @Html.EditorFor(model => model.Product.TotalProduct, new { @class = "form-control inputfield", @id = "val-username", @placeholder = "Product price", type = "number" })
                                    @Html.ValidationMessageFor(model => model.Product.TotalProduct, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label" for="val-username">
                                    Product Image<span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-8">
                                    @if (Model.Product != null && Model.Product.ProductImage != null)
                                    {
                                        <img src="@Model.Product.ProductImage" class="new-contact__img" alt="" width="100" height="100">
                                        <br />
                                    }
                                    <input type="file" name="file" id="files" />

                                </div>

                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        @if (Model.Product != null && Model.Product.ProdutID > 0)
                                        {
                                            <div class="form-group row">
                                                <div class="col-lg-12">
                                                    <input type="submit" value="Update" class="btn btn-light" />
                                                </div>
                                            </div>

                                        }
                                        else
                                        {
                                            <div class="form-group row">
                                                <div class="col-lg-12">
                                                    <input type="submit" value="Add" class="btn btn-light" />
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                                }
                            </div>
                        </div>
            </div>
        </div>
    </div>
</div>
<style>
    .inputfield {
        width: 100px;
        height: 100px;
    }
    .title-addproduct {
        text-align: center;
        margin-bottom: 3%;
        margin-top: 2%;
    }
    .form-validation {
        padding: 0% 5%;
    }
    input#Product_ProductName {
        padding: 1%;
        width: 100%;
    }
    input#Product_ProductPrice {
    padding: 1%;
    width: 100%;
}
    input#Product_TotalProduct {
        padding: 1%;
        width: 100%;
    }
    input.btn.btn-light {
        padding: 1% 12%;
        background-color: gainsboro;
        margin-left: 95%;
        margin-top: 5%;
    }
</style>