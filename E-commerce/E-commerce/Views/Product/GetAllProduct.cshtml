@model Aranoz.Model.Model.AdminViewModel

@{
    ViewBag.Title = "GetAllProduct";
    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
    var i = 1;
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product List</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Product Image</th>
                                    <th>Product Name</th>
                                    <th>In Stock</th>
                                    <th>Product Price</th>
                                    <th>Product Details</th>
                                    <th>Category Name</th>
                                    <th>Delete</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.ProductList)
    {
                                        <tr>
                                            <td>@i</td>
                                            <td>
                                                <img src="@item.ProductImage" width="100" hight="100" />
                                            </td>
                                            <td>
                                                @item.ProductName
                                            </td>
                                            <td>
                                                @item.TotalProduct
                                            </td>
                                            <td>
                                                @item.ProductPrice
                                            </td>
                                            <td>
                                                @item.ProductDetails
                                            </td>
                                            <td>
                                                @item.CategoryName
                                            </td>
                                            <td>
                                                @Html.ActionLink("Delete", "DeleteProduct", new { Id = item.ProdutID }, new { title = "Delete Item", @class = "btn btn-danger", data_toggle = "tooltip", data_placement = "top", onclick = "return confirm('Are you sure you want to delete this item?')" })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Update", "GetSingleProduct", new { Id = item.ProdutID }, new { title = "Edit Item", @class = "btn btn-success", data_toggle = "tooltip", data_placement = "top" })
                                            </td>
                                        </tr>
                                        i++;
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #/ container -->