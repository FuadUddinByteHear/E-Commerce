@model Aranoz.Model.Model.AdminViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>aranoz</title>
    <link rel="icon" href="img/favicon.png">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/bootstrap.min.css">
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/animate.css">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/owl.carousel.min.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/all.css">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/flaticon.css">
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/themify-icons.css">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/magnific-popup.css">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/slick.css">
    <!-- style CSS -->
    <link rel="stylesheet" href="~/Assests/LoginAssests/css/style.css">
</head>
<body>
    <section class="login_part padding_top">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_text text-center">
                        <div class="login_part_text_iner">
                            <h2>New to our Shop?</h2>
                            <p>
                                There are advances being made in science and technology
                                everyday, and a good example of this is the
                            </p>
                            @Html.ActionLink("CREATE AN ACCOUNT", "AddNewCustomer", "", new { @class = "btn_3" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="login_part_form">
                        <div class="login_part_form_iner">
                            <h3>
                                Welcome Back ! <br>
                                Please Sign in now
                            </h3>
                            @using (Html.BeginForm("Index", "Login", "", FormMethod.Post, new { @class = "row contact_form" }))
                            {
                                <div class="col-md-12 val-Data">
                                    <label for="validationCustomUsername" class="form-label">Username</label>
                                    <div class="input-group has-validation">
                                        @Html.TextBoxFor(model => model.User.UserName, new { @class = "form-control", placeholder = "Enter Password" }) <br />
                                    </div>
                                    <div>
                                        @Html.ValidationMessageFor(model => model.User.UserName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12 val-Data">
                                    <label for="validationCustom03" class="form-label">Password</label>
                                    <div class="input-group has-validation">
                                        @Html.TextBoxFor(model => model.User.Password, new { @class = "form-control", placeholder = "Enter Password" }) <br />
                                    </div>
                                    <div>
                                        @Html.ValidationMessageFor(model => model.User.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-12 form-group">
                                    <input type="submit" value="Log In" class="btn btn-light btn_3" />
                                    @Html.ActionLink("forget password?", "AddNewCustomer", "", new { @class = "lost_pass" })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- jquery plugins here-->
    <!-- jquery -->
    <script src="~/Assests/LoginAssests/js/jquery-1.12.1.min.js"></script>
    <!-- popper js -->
    <script src="~/Assests/LoginAssests/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/Assests/LoginAssests/js/bootstrap.min.js"></script>
    <!-- easing js -->
    <script src="~/Assests/LoginAssests/js/jquery.magnific-popup.js"></script>
    <!-- swiper js -->
    <script src="~/Assests/LoginAssests/js/swiper.min.js"></script>
    <!-- swiper js -->
    <script src="~/Assests/LoginAssests/js/masonry.pkgd.js"></script>
    <!-- particles js -->
    <script src="~/Assests/LoginAssests/js/owl.carousel.min.js"></script>
    <script src="~/Assests/LoginAssests/js/jquery.nice-select.min.js"></script>
    <!-- slick js -->
    <script src="~/Assests/LoginAssests/js/slick.min.js"></script>
    <script src="~/Assests/LoginAssests/js/jquery.counterup.min.js"></script>
    <script src="~/Assests/LoginAssests/js/waypoints.min.js"></script>
    <script src="~/Assests/LoginAssests/js/contact.js"></script>
    <script src="~/Assests/LoginAssests/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Assests/LoginAssests/js/jquery.form.js"></script>
    <script src="~/Assests/LoginAssests/js/jquery.validate.min.js"></script>
    <script src="~/Assests/LoginAssests/js/mail-script.js"></script>
    <script src="~/Assests/LoginAssests/js/stellar.js"></script>
    <script src="~/Assests/LoginAssests/js/price_rangs.js"></script>
    <!-- custom js -->
    <script src="~/Assests/LoginAssests/js/custom.js"></script>
</body>
</html>

